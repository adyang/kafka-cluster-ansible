[Unit]
Description=Apache Kafka - Broker
After=network.target {{ kafka_zookeeper_service_target }}
StartLimitIntervalSec=30
StartLimitBurst=5

[Service]
Type=simple
User={{ kafka_user }}
ExecStart={{ kafka_base_dir }}/start-kafka
TimeoutStopSec=180
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

